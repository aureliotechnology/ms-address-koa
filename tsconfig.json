{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "types": ["reflect-metadata", "jest"],
    "noEmitHelpers": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "rootDirs": ["src", "tests"],
    "baseUrl": "src",
    "paths": {
      "@api/*": ["api/*"],
      "@app/*": ["app/*"],
      "@domain/*": ["domain/*"],
      "@infraestructure/*": ["infraestructure/*"],
      "@tests/*": ["./tests/*"],
      "~/*": ["*"]
    }
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules"]
}
